<div class="col-md-3">
	<div class="profile-sidebar">
		<!-- SIDEBAR USERPIC -->
		<div class="profile-userpic">
			<%= image_tag(current_user.avatar.url(:crop), class: "img-responsive") %>
		</div>
		<!-- END SIDEBAR USERPIC -->
		<!-- SIDEBAR USER TITLE -->
		<div class="profile-usertitle">
			<div class="profile-usertitle-name">
				<% if current_user.firstname != nil and current_user.lastname != nil %>
					<%= current_user.firstname %> <%=current_user.lastname %>
				<% else %>
					(update your name in 'Edit Profile')
				<% end %>
			</div>
			<div class="profile-usertitle-username">
				<% if current_user.username != nil %>
					<%= current_user.username %>
				<% else %>
					(update your username in 'Edit Profile')
				<% end %>
			</div>
			<div class="profile-usertitle-email">
				<%= current_user.email %>
			</div>
		</div>
		<!-- SIDEBAR MENU -->
		<div class="profile-usermenu">
			<ul class="nav">
				<li>
					<a href= <%= events_path %>> My Calendar </a>
				</li>
				<li>
					<a href= <%= users_path %>> My Friends </a>
				</li>
				<% for group in current_user.groups %>
					<% cache(cache_key_for_group_row(group)) do %>
						<li>
							<%= link_to "#{group.title}", group %>
						</li>
					<% end %>
				<%end%>
				<li>
					<a href= <%= new_group_path %>> Create New Group </a>
				</li>
			</ul>
		</div>
		<!-- END MENU -->
	</div>
</div>