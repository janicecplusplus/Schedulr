<body id="editprofile">
  <%= devise_error_messages! %>
  <div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <section class="login-form">
        <div class="panel panel-default">
          <div class="panel-heading text-center">
            <h2>Edit Your Profile</h2>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
            <%= f.label :email, 'Email Address', class: 'sr-only' %>
            <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Email Address' %>
            <br>
            <%= f.label :password, 'Password', class: 'sr-only' %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'New Password' %>
            <br>
            <%= f.label :password_confirmation, 'Password Confirmation', class: 'sr-only' %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'New Password Confirmation' %>
            <p align = "center"><i>leave blank if you don't want to change it</i></p>
            <%= f.label :current_password, 'Current Password', class: 'sr-only' %>
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Current Password' %>
            <p align = "center"><i>we need it to confirm your changes</i></p>
            <hr>
            <%= f.submit "Update", class: 'btn btn-lg btn-primary btn-block' %>
            <a href="javascript:history.back()" class="btn btn-lg btn-primary btn-block" role="button">Done</a>
            <br>
            <% end %> 
            <div align = "right"> Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> </p>
          </div>
        </div>
      </section>
    </div>
    <div class="col-md-4"></div>
  </div>
</body>
