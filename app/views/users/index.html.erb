<h2>Users</h2>
<ul>
  <% for user in @users %>
    <% if user != current_user %>
      <li>
        <%= user.email %>
        <% if current_user.friends.include? user or current_user.inverted_friends.include? user %>
          <%= link_to "Remove Friend", friendship_path(:friend_id => user.id, :id => current_user), :method => :delete %>
        <% else %>
          <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>

<h2>Friends</h2>
<ul>
  <% for friend in current_user.friends %>
    <li>
      <%= friend.email %>
    </li>
  <% end %>
  <% for friend in current_user.inverted_friends %>
    <li>
      <%= friend.email %>
    </li>
  <% end %>
</ul>