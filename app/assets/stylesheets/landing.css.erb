/* GLOBAL STYLES
-------------------------------------------------- */
/* Padding below the footer and lighter body text */

body {
  padding-bottom: 30px;
  color: #5a5a5a;
}

/* HEADER
-------------------------------------------------- */

  .main_bg {
    padding: 50px 0;
    text-align: center;
    background: url(<%= asset_path 'landing_header.jpg' %>);
    background-size: 100%;
    background-repeat: no-repeat;
    color: #f8f8f8;
  }

/* BUTTONS
-------------------------------------------------- */

.btn.outline {
    width: 130px;
    background: none;
    padding: 12px 22px;
}

.btn-primary.outline {
    border: 3px solid #FFFFFF;
    color: #FFFFFF;
}

.btn-primary.outline:hover, .btn-primary.outline:focus, .open > .dropdown-toggle.btn-primary {
    background-color: #B6C3E7;
    color: #FFFFFF;
    border-color: #B6C3E7;
}
.btn-primary.outline:active, .btn-primary.outline.active {
    background-color: #9094DA;
    color: #FFFFFF;
    border-color: #9094DA;
    box-shadow: none;
}

/* MARKETING CONTENT
-------------------------------------------------- */

/* Center align the text within the three columns below the header */
.marketing .col-lg-4 {
  text-align: center;
}

.marketing h2 {
  font-weight: normal;
}

.marketing .col-lg-4 p {
  margin-right: 10px;
  margin-left: 10px;
}

.img-circle {
  width: 160px;
  height: 160px;
}

#img-circle-1 {
  background: url(<%= asset_path 'marketing1.jpg' %>); 
}

#img-circle-2 {
  background: url(<%= asset_path 'marketing2.jpg' %>); 
}

#img-circle-3 {
  background: url(<%= asset_path 'marketing3.jpg' %>); 
}

/* RESPONSIVE CSS
-------------------------------------------------- */

@media (min-width: 768px) {
  .featurette-heading {
    font-size: 50px;
  }
}

@media (min-width: 992px) {
  .featurette-heading {
    margin-top: 120px;
    margin-bottom: 120px;
  }
}

body,
html {
    width: 100%;
    height: 100%;
}

.lead {
    font-size: 18px;
    font-weight: 400;
}

.intro-message {
    position: relative;
    padding-top: 15%;
    padding-bottom: 5%;
}

.intro-message > h1 {
    margin: 0;
    text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
    font-size: 8em;
}

.intro-divider {
    width: 450px;
    border-top: 1px solid #f8f8f8;
    border-bottom: 1px solid rgba(0,0,0,0.2);
}

.intro-message > h3 {
    text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
}
